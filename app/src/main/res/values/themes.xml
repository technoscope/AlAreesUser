<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TailorUserApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_900</item>
        <item name="colorPrimaryVariant">@color/green_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_900</item>
        <item name="colorSecondaryVariant">@color/green_900</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MySwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColorPrimaryDisableOnly">#FFFFFF</item>
        <item name="android:colorControlActivated">@color/colorblack</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
    <style name="Theme.payment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_900</item>
        <item name="colorPrimaryVariant">@color/green_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_900</item>
        <item name="colorSecondaryVariant">@color/green_900</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Font" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gilroy_extrabold</item></style>

    <style name="Fontwhite" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gilroy_extrabold</item></style>

    <style name="fidenafont" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/fidena</item></style>

    <style name="Theme.TailorUserApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TailorUserApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TailorUserApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>