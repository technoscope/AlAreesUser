<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alarees.tailoruserapp.account.SigninFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@drawable/background"
        android:fillViewport="true"
        android:orientation="vertical"
        tools:context=".activity.SignInActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">
<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:padding="5dp"-->
<!--                    android:text="@string/welcome_back_nyou_ve_been_missed"-->
<!--                    android:textColor="@color/green_900"-->
<!--                    android:textSize="22dp"-->
<!--                    android:textStyle="bold" />-->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_logo1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_address"
                    android:fontFamily="@font/fidena"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="13dp"
                    />

                <EditText
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:alpha="0.5"
                    android:background="@drawable/hallow_round_black_bg"
                    android:backgroundTint="@color/textviewcolor"
                    android:inputType="textWebEmailAddress"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:fontFamily="@font/fidena"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="13dp"
                    />

                <EditText
                    android:id="@+id/ed_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/hallow_round_black_bg"
                    android:padding="4dp"
                    android:alpha="0.5"
                    android:backgroundTint="@color/textviewcolor"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_forgot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="5dp"
                        android:fontFamily="@font/fidena"
                        android:text="@string/forgot_password"
                        android:textColor="@color/green_900"
                        android:textSize="13dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/fidena"
                    android:text="@string/by_login_you_agree_to_our_terms_and_policy"
                    android:textColor="@color/white"
                    android:textSize="13dp"/>

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/hallow_round_black_bg"
                    android:text="@string/SignIn"
                    android:fontFamily="@font/fidena"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:indeterminate="true"
                        android:visibility="gone" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/loader_un"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/fidena"
                        android:text="@string/don_t_have_an_account"
                        android:textColor="@color/orange"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/txt_siginup"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="@string/Signup"
                        android:fontFamily="@font/fidena"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="13dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/id_google_signin"
                    android:layout_width="240dp"
                    android:layout_height="48dp"
                    android:background="@drawable/hallow_round_black_bg"
                    android:padding="2dp"
                    android:elevation="2dp"
                    android:layoutDirection="ltr"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:orientation="horizontal"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/googlebtn"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Sign in with Google" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:text="or"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fidena"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/sign_up_with_phone_no"
                        android:fontFamily="@font/fidena"
                        android:textColor="@color/orange"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/btn_phone_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="@string/Signup"
                        android:fontFamily="@font/fidena"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="13dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>