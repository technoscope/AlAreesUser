<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alarees.tailoruserapp.account.SignUpFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.8"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_logo1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fidena"
                    android:padding="5dp"
                    android:text="@string/Create_your_account"
                    android:textAlignment="center"
                    android:textColor="@color/green_900"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="14dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fidena"
                            android:text="@string/first_name"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/ed_fname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="4dp"
                            android:alpha="0.5"
                            android:background="@drawable/hallow_round_black_bg"
                            android:backgroundTint="@color/textviewcolor"
                            android:inputType="textPersonName"
                            android:padding="4dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fidena"
                            android:text="@string/last_name"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/ed_lname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:alpha="0.5"
                            android:background="@drawable/hallow_round_black_bg"
                            android:backgroundTint="@color/textviewcolor"
                            android:inputType="textPersonName"
                            android:padding="4dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/black" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fidena"
                            android:text="@string/height"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/ed_height"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="4dp"
                            android:alpha="0.5"
                            android:background="@drawable/hallow_round_black_bg"
                            android:backgroundTint="@color/textviewcolor"
                            android:hint="@string/_150_n_220"
                            android:inputType="numberDecimal"
                            android:padding="4dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/textcolor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fidena"
                            android:text="@string/weight"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/ed_weight"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:alpha="0.5"
                            android:background="@drawable/hallow_round_black_bg"
                            android:backgroundTint="@color/textviewcolor"
                            android:hint="in KG"
                            android:inputType="numberDecimal"
                            android:padding="4dp"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/textcolor" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fidena"
                    android:text="@string/email_address"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:alpha="0.5"
                    android:background="@drawable/hallow_round_black_bg"
                    android:backgroundTint="@color/textviewcolor"
                    android:inputType="textWebEmailAddress"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fidena"
                    android:text="@string/password"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/ed_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:alpha="0.5"
                    android:background="@drawable/hallow_round_black_bg"
                    android:backgroundTint="@color/textviewcolor"
                    android:inputType="textPassword"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/black"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fidena"
                    android:text="@string/phone_no"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/ed_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:alpha="0.5"
                    android:background="@drawable/hallow_round_black_bg"
                    android:backgroundTint="@color/textviewcolor"
                    android:inputType="number"

                    android:padding="4dp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fidena"
                    android:text="@string/address"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/ed_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:alpha="0.5"
                    android:background="@drawable/hallow_round_black_bg"
                    android:backgroundTint="@color/textviewcolor"
                    android:inputType="textPostalAddress"
                    android:padding="4dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:fontFamily="@font/fidena"
                    android:gravity="center"
                    android:text="@string/by_signing_up_you_agree_to_our_terms_and_policy"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_singup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/fidena"
                    android:text="@string/Signup"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>