<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/language_container"
    android:background="@drawable/background"
    tools:context="com.alarees.tailoruserapp.more.language.LanguageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_margin="60dp"
        android:background="@drawable/ic_global" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="50"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/fidena"
            android:text="@string/Welcome"
            android:textAlignment="center"
            android:textColor="@color/green_900"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fidena"
            android:text="@string/languagedes"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/hallow_round_black_bg"
            android:backgroundTint="@color/green_900"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/id_langauge"
                android:layout_width="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:layout_height="20dp"
                android:contentDescription="region"
                android:src="@drawable/ic_baseline_language_24_white" />

            <Spinner
                android:id="@+id/languague_category"
                android:layout_width="wrap_content"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnconfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/hallow_round_black_bg"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/fidena"
            android:src="@color/white"
            android:text="@string/Confirm"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>