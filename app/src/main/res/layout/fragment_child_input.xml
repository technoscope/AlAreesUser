<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".measurement.measurementlist.ChildInputFragment"
    android:background="@drawable/background">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/back_measurement"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="20dp"
           android:background="@drawable/ic_baseline_arrow_back_24" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/add_new_measurement"
           android:layout_margin="20dp"
           android:layout_gravity="center"
           android:textSize="18sp"
           android:fontFamily="@font/fidena"
           android:textColor="@color/white"
           />

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/enter_details"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/fidena"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/name"
            android:textColor="@color/white"
            android:fontFamily="@font/fidena"/>

        <EditText
            android:id="@+id/input_child_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/hallow_round_black_bg"
            android:inputType="textPersonName"
            android:backgroundTint="@color/green_900"
            android:padding="4dp"
            android:alpha="0.6"
            android:textColor="@color/white"
            android:textColorHint="@color/whitegrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/height"
            android:textColor="@color/white"
            android:fontFamily="@font/fidena"/>

        <EditText
            android:id="@+id/input_child_height"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/hallow_round_black_bg"
            android:inputType="number"
            android:backgroundTint="@color/green_900"
            android:padding="4dp"
            android:textColor="@color/white"
            android:alpha="0.6"
            android:textColorHint="@color/whitegrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/weight"
            android:textColor="@color/white"
            android:fontFamily="@font/fidena"/>

        <EditText
            android:id="@+id/input_child_weight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/hallow_round_black_bg"
            android:inputType="number"
            android:padding="4dp"
            android:backgroundTint="@color/green_900"
            android:textColor="@color/white"
            android:alpha="0.6"
            android:textColorHint="@color/whitegrey" />

        <Button
            android:id="@+id/id_okay_btn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/okay"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>